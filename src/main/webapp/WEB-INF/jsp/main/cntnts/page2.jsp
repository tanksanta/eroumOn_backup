<script>
    $(function() {
        var swiper = new Swiper(".swiper", {
            loop: true,
            slidesPerView: 'auto',
            spaceBetween: 12,
            speed: 5000,
            autoplay: {
                delay: 0,
                disableOnInteraction: false,
            },
            768: {
                spaceBetween: 16,
            },
            1024: {
                spaceBetween: 20,
            },
        });
        
        $('.swiper').on('mouseover', function() {
            swiper.autoplay.stop();
        });

        $('.swiper').on('mouseout', function() {
            swiper.autoplay.start();
        });
    });
</script>